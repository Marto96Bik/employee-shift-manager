generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  OWNER
  EMPLOYEE
}

model User {
  id       String @id @default(uuid())
  name     String
  lastname String
  email    String @unique
  password String
  role     Role

  stores      UserStore[]
  ownedStores Store[]     @relation("StoreOwner")

  manages   UserHierarchy[] @relation("manager")
  managedBy UserHierarchy[] @relation("employee")

  shifts Shift[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Store {
  id   String @id @default(uuid())
  name String

  ownerId String
  owner   User   @relation("StoreOwner", fields: [ownerId], references: [id])

  users  UserStore[]
  shifts Shift[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserStore {
  userId  String
  storeId String

  user  User  @relation(fields: [userId], references: [id])
  store Store @relation(fields: [storeId], references: [id])

  @@id([userId, storeId])
}

model UserHierarchy {
  managerId  String
  employeeId String

  manager  User @relation("manager", fields: [managerId], references: [id])
  employee User @relation("employee", fields: [employeeId], references: [id])

  @@id([managerId, employeeId])
}

model Shift {
  id        String   @id @default(uuid())
  date      DateTime
  startTime DateTime
  endTime   DateTime

  userId  String
  storeId String

  user  User  @relation(fields: [userId], references: [id])
  store Store @relation(fields: [storeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
